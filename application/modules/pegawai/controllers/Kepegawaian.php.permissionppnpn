			$recgolongan2 = $this->golongan_model->find(trim($gol_id2));
			Template::set('GOLONGAN_AKHIR2', $recgolongan2->NAMA);
			Template::set('NAMA_PANGKAT2', $recgolongan2->NAMA_PANGKAT);
			
